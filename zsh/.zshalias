# Open a directory in the current window in neovim
alias vi="neovide --fork"
alias vim="nvim"

# Go to Work directory
alias work="cd $HOME/Developer/Work/"

# Go to Learning directory
alias learn="cd $HOME/Developer/Learn/"

# Go to .dotfiles directory
alias dot="cd $HOME/.dotfiles/"

# Open image in kitty terminal
alias icat="kitty +kitten icat"

# Make python3 as python
alias python=python3


if [[ `uname` == "Linux" ]]; then
  alias pbcopy="xclip -sel clip"
fi

alias search="atuin search -i"
